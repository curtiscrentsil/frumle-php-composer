#!/usr/bin/env php
<?php

declare(strict_types=1);

// Find autoloader: Composer global install or local project
$autoloadPaths = [
    __DIR__ . '/../vendor/autoload.php',
    __DIR__ . '/../../../autoload.php',
];

$loaded = false;
foreach ($autoloadPaths as $path) {
    if (file_exists($path)) {
        require $path;
        $loaded = true;
        break;
    }
}

if (!$loaded) {
    fwrite(STDERR, "Error: Could not find Composer autoloader.\n");
    fwrite(STDERR, "Run 'composer install' in the frumle package directory.\n");
    exit(1);
}

$cli = new \Frumle\Cli();
$cli->run($argv);
